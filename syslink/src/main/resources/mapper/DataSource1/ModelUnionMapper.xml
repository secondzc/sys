<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tongyuan.model.dao.ModelUnionMapper">
    <resultMap id="baseResultMap" type="com.tongyuan.model.domain.ModelUnion">
        <id column="id" property="id" jdbcType="BIGINT"  />
        <result column="model_id" property="modelId" jdbcType="BIGINT"/>
        <result column="repository_id" property="repositoryId" jdbcType="BIGINT"/>
    </resultMap>
    <sql id="baseColumnList" >
        id,model_id,repository_id
    </sql>
    <insert id="add">
         INSERT INTO model_union (model_id,repository_id) VALUES
        (#{modelId},#{repositoryId})
    </insert>
    <update id="update" parameterType="com.tongyuan.model.domain.ModelUnion">
        UPDATE model_union SET
            model_id = #{modelId},repository_id = #{repositoryId}
            WHERE id = #{id}
    </update>
    <delete id="deleteByIds" parameterType="java.lang.String">
        DELETE FROM model_union WHERE id in
        <foreach item="idItem" collection="array" open="(" separator="," close=")">
            #{idItem}
        </foreach>
    </delete>
    <select id="queryUnion" resultMap="baseResultMap" resultType="com.tongyuan.model.domain.ModelUnion">
        SELECT <include refid="baseColumnList" ></include>
        FROM model_union
        WHERE model_id = #{model_id,jdbcType=BIGINT} and repository_id = #{repository_id,jdbcType=BIGINT}
    </select>
</mapper>